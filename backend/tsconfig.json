{
    "compilerOptions": {
      "typeRoots": ["./types", "./node_modules/@types"],
      "strict": false,
      "target": "ES2020",
      "module": "CommonJS",          // Utilisation de CommonJS car nodemon et ts-node ne supportent pas encore bien ESNext
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  